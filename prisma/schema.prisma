generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}


datasource db {
  provider = "postgresql"
}

enum JobType {
  PHD
  JOB
}

model JobOpportunity {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())

  title          String
  type           JobType
  company        String
  country        String
  city           String
  description    String   @db.Text
  requirements   String[]
  deadline       DateTime?
  postedAt       DateTime
  applicationLink String
  source         String
}
