{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*",
    "src/lib/**/*",
    "src/components/**/*",
    "lib/**/*",
    "api/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*"
  ]
}
